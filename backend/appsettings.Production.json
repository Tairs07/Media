{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=postgres;Port=5432;Database=local;Username=mediashare_user;Password=123456"
  },
  "Jwt": {
    "Key": "请修改为你自己的安全密钥至少32字符",
    "Issuer": "MediaShareAPI",
    "Audience": "MediaShareClient",
    "ExpiryMinutes": 60
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost",
      "http://your-domain.com",
      "https://your-domain.com"
    ]
  },
  "FileStorage": {
    "Type": "Local",
    "LocalPath": "wwwroot/uploads",
    "MaxImageSize": 10485760,
    "MaxVideoSize": 104857600,
    "AllowedImageTypes": [ "image/jpeg", "image/png", "image/gif", "image/webp" ],
    "AllowedVideoTypes": [ "video/mp4", "video/webm", "video/quicktime" ],
    "ThumbnailWidth": 300,
    "ThumbnailHeight": 300
  }
}
